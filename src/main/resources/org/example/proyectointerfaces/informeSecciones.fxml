<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="629.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectointerfaces.Informes.InformeSeccionController">

    <children>
        <!-- Contenedor principal fondo blanco -->
        <Pane prefHeight="629.0" prefWidth="400.0" style="-fx-background-color: white;">
            <children>
                <!-- Logo de Orion -->
                <ImageView fitHeight="120.0" fitWidth="129.0" layoutX="140.0" layoutY="74.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@Imagenes/logo.jpg" />
                    </image>
                </ImageView>

                <!-- Título de la página -->
                <Text fill="#131a8e" layoutX="109.0" layoutY="227.0" strokeType="OUTSIDE" strokeWidth="0.0" text="INFORME SECCIONES">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Text>

                <!-- Campo  -->
                <!-- ComboBox para las Secciones -->
                <ComboBox fx:id="seccionComboBox" layoutX="75.0" layoutY="280.0" prefWidth="250.0" style="-fx-border-color: #131a8e; -fx-border-radius: 10px; -fx-padding: 5px;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Tribu" />
                            <String fx:value="Mambos" />
                            <String fx:value="Rhygings" />
                        </FXCollections>
                    </items>
                    <promptText>
                        <String fx:value="Selecciona una sección" />
                    </promptText>
                </ComboBox>

                <!-- Botón para generar el informe -->
                <Button fx:id="generarInformeButton" defaultButton="true" layoutX="133.0" layoutY="391.0" mnemonicParsing="false" onAction="#generarInforme" prefHeight="30.0" prefWidth="135.0" style="-fx-background-color: #131a8e; -fx-background-radius: 20px; -fx-text-fill: white;" text="GENERAR INFORME">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <!-- Botón para volver -->
                <Button fx:id="volverButton" layoutX="155.0" layoutY="441.0" mnemonicParsing="false" onAction="#volverASelector" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #d32f2f; -fx-background-radius: 20px; -fx-text-fill: white;" text="VOLVER">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            <MenuButton fx:id="idiomas" layoutX="309.0" layoutY="18.0" mnemonicParsing="false" style="-fx-background-color: transparent;" text="Idiomas" textFill="#131a8e" />

            </children>
        </Pane>
    </children>
</AnchorPane>
